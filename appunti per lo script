	<div class="slider"> 
			<div class="slider-viewer">
        		<img src="img/${arrImages[i].image}" class = "slider-img">
				<div class="info">
        			<h4>${arrImages[i].title}</h4> 
        			<span>${arrImages[i].text}</span> 
				</div>
        	</div>
			<div class="thumbs">
				<div class="controls">
